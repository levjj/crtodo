<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
<script type="text/javascript" src="jquery.js"></script>
<title>CRToDo web interface</title>
<link rel="stylesheet" type="text/css" href="/style.css" media="screen" />
<script type="text/javascript" src="http://www.google.com/jsapi"></script>
<script type="text/javascript">
google.load("jquery", "1.4");
google.setOnLoadCallback(function() {
  $.getJSON("/", function(data){
    $("#nav").empty();
    $.each(data.items, function(i,item){
      $("#images").append(
        $("<li/>").append(
          $("<a/>").attr("href", item)
        );
    });
  });
}
</script>
</head>
<body>
<div id="header">
<h1>CRToDo web interface</h1>
 <div id="menu">
  <ul id="nav">
          <% @listnames.each do |list| %>
            <li><a href="/<%= list %>"><%= list %></a></li>
          <% end %>
  </ul>
 </div>
</div>
<div id="content">
<div id="left">
<p>
  Select a ToDo list from the links above.
</p>
</div>
	
<div id="right">
	<div class="box">
			<h2>News :</h2>	
			<p>This XHTML/CSS Template was inspired by great NiftyCube layouts. It is released under GPL and it is xhtml/css valid.</p>
	</div>
			
	<div class="box">
				<h2>Links :</h2>
				<ul>
				<li><a href="http://www.minimalistic-design.info">Web Design Directory</a></li>
				<li><a href="http://www.historyexplorer.net">History Timelines</a></li>
				</ul>
	</div>
		
    <div class="box">
	   <div style="font-size: 0.8em;">Design by <a href="http://www.minimalistic-design.net">Minimalistic Design</a></div>
	</div>
</div>
</div>
</body>
</html>
